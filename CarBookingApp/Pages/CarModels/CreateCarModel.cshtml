@page
@model CarBookingApp.Pages.CarModels.CreateCarModelModel
@{
}

<div class="card">

<form method="post">
    <div class="form-group">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <label asp-for="@Model.CarModelObj.Name" class="control-label"></label>
        <input asp-for="@Model.CarModelObj.Name" class="form-control" placeholder="Enter Model Name" />

    </div>

    <div class="form-group">
        <label asp-for="@Model.CarModelObj.MakeId" class="control-label"></label>
        <select asp-for="@Model.CarModelObj.MakeId" asp-items="Model.Make" class="form-control"> 
             <option> Select Make </option>
        </select>
        <span asp-validation-for="@Model.CarModelObj.MakeId" class="text-danger"></span>
        </div>
    <br />
    <div>
    <input type="Submit" value="Submit" name="" class="btn btn-primary" />
    </div>
</form>
</div>